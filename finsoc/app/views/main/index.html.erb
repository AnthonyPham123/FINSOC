<div class="index-container">
  <div id="finsoc-banner">
    <div class="carousel-inner" role="listbox">
     <div class="item active carousel-img">
        <div class="banner-text">
            <h1>
                Finance & Banking Society
            </h1>
            <h2>
                University of New South Wales<br/>
                FINSOC
            </h2>
        </div>
        <%= link_to events_path, class: "event-box-link", method: :get do %>
          <div class="event-box">
              <b>UPCOMING EVENTS</b>
          </div>
        <% end %>
       <%= image_tag "events/default-min.jpg", id:"finsoc-banner-logo", alt: "UNSW FINSOC" %>
     </div>
    </div>
  </div>

  <div class="banner container">
    <div id="mission" class="jumbotron banner-inner">
      <div class="title">
        <h2>OUR MISSION</h2>
      </div>
      <div class="content">
        <p>To become Australia&#8217;s leading student run society platform in assisting students on achieving their banking and financial planning career goals.</p>
      </div>
    </div>
  </div>

  <div class="banner container">
    <div id="sponsors" class="jumbotron banner-inner">
      <div class="title">
        <h2>SPONSORS</h2>
      </div>
      <div class="item">
          <%= image_tag "sponsors/GradMentor.png", alt: "Grad Mentor" %>
      </div>
      <div class="item">
          <%= image_tag "sponsors/FPA.png", alt: "FPA" %>
      </div>
      <div class="item">
          <%= image_tag "sponsors/Zookal.png", alt: "FPA" %>
      </div>
      <%= link_to sponsorship_path, method: :get do %>
          <button id="sponsors-link">
              More Details
          </button>
      <% end %>
    </div>
  </div>
</div>
